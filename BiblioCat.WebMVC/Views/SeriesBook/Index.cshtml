@model IEnumerable<BiblioCat.Models.TableJunctions.SeriesBook.SeriesBookListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Series-Book Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SeriesId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeriesName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SeriesId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeriesName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { seriesId = item.SeriesId, bookId = item.BookId })
        </td>
    </tr>
}

</table>
