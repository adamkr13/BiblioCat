@model IEnumerable<BiblioCat.Models.Book.BookListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Book Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenreOfBook)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastNames)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BookId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GenreOfBook)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PublicationDate)
    </td>
    <td>
        @foreach (var itemModel in item.LastNames)
        {
            @Html.DisplayFor(modelItem => itemModel)
            <br />
        }
    </td>
    <td>
        @foreach (var itemModel in item.FirstNames)
        {
            @Html.DisplayFor(modelItem => itemModel)
            <br />
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) |
        @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
    </td>
</tr>
}

</table>
