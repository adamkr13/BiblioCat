@model BiblioCat.Models.TableJunctions.AuthorPublisher.AddPublishersCreate

@{
    ViewBag.Title = "Add Publishers to Author";
}

<h2>Add Publishers to Author</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>AddPublishersCreate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AuthorId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AuthorId, ViewData["Authors"] as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AuthorId, "", new { @class = "text-danger" })
            </div>
        </div>

        @foreach (var item in ViewBag.Publishers)
        {
            <input type="checkbox" name="Publishers" value="@item.PublisherId" /> @item.PublisherName
            <br />
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Author List", "Index", "Author")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
